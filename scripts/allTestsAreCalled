#!/bin/bash

# 
# Script used to check if all of the defined tests are being ran
#

# Check a file has been passed
if [ $# -lt 1 ]; then
    echo "Use: $0 file.c [--verbose|-v]"
    exit 1
fi

file="$1"
verbose=0

if [ "$2" == "--verbose" ] || [ "$2" == "-v" ]; then
    verbose=1
fi

# Defined tests
all_tests=$(grep -E '^\s*void\s+[a-zA-Z0-9_]+\s*\(\s*void\s*\)\s*{' "$file" | grep -v '//' \
    | sed -E 's/^\s*void\s+([a-zA-Z0-9_]+)\s*\(.*\).*/\1/' \
    | grep -vE '^(setUp|tearDown|main)$' \
    | sort)

# Non-commented tests in main
called_tests=$(grep -E '^[^/]*RUN_TEST\s*\(\s*[a-zA-Z0-9_]+\s*\)' "$file" \
    | sed -E 's/.*RUN_TEST\s*\(\s*([a-zA-Z0-9_]+)\s*\).*/\1/' \
    | sort)

if [ $verbose -eq 1 ]; then
    echo "== DEFINED TESTS =="
    echo "$all_tests"
    echo "== CALLED TESTS =="
    echo "$called_tests"
fi

# Get tests that are defined but not called in main, then print a warning
missing=$(comm -23 <(echo "$all_tests") <(echo "$called_tests"))

if [ -n "$missing" ]; then
    echo -e "\033[1;33mFound defined tests not ran by main():\033[0m"
    while read -r testname; do
        echo "$archivo:$testname:NOT_RAN"
    done <<< "$missing"
    exit 1
else
    exit 0
fi
